@model Data.Models.Book

    <div class="col-lg-4">
        <img class="img-thumbnail img-fluid" src="@Model.Image" alt="@Model.Name" width="250" height="270" />
        <h2>@Model.Name</h2>
        <p>Price: @Model.Price.ToString("c")</p>
        <p><a class="btn btn-success mb-3" asp-controller="Cart" asp-action="AddToCart" asp-route-ID="@Model.ID" style="width: 75px">Add to cart</a></p>
    </div>